@model Pizzeria.Models.Dish
@inject Pizzeria.Services.IngredientService IngredientService
@inject Pizzeria.Services.CategoryService CategoryService

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit dish</h2>

@{
    var ingredients = IngredientService.All();
    var dishIngredients = IngredientService.All(Model.DishId);
    var categories = CategoryService.All();
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DishId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DishIngredients" class="control-label"></label>
                @{
                    for(var i = 0; i < ingredients.Count; i++)
                    {
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" asp-for="@dishIngredients[i].Enabled"
                                       name="ingredient-@dishIngredients[i].IngredientId" /> @dishIngredients[i].Name
                            </label>
                        </div>
                    }
                }
                <span asp-validation-for="DishIngredients" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
