@using Pizzeria.Services
@model Pizzeria.Models.Dish
@inject Pizzeria.Services.CategoryService CategoryService
@inject Pizzeria.Services.IngredientService IngredientService

@{
    ViewData["Title"] = "Create";
    var selectList = CategoryService.GetSelectList();
    var ingredients = IngredientService.All();
     }
}

<h2>Create</h2>

<h4>Dish</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                @{
                    <select asp-for="CategoryId" asp-items="@selectList"></select>
                }
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DishIngredients" class="control-label"></label>
                @{
                    for (var i = 0; i < ingredients.Count; i++)
                    {
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" asp-for="@Model.DishIngredients[i].Enabled"
                                       name="ingredient-@ingredients[i].IngredientId" /> @ingredients[i].Name
                                </label>
                            </div>
                    }
                }
                <span asp-validation-for="DishIngredients" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
