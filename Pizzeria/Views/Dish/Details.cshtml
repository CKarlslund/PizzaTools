@using Microsoft.AspNetCore.Mvc.Rendering
@model Pizzeria.Models.Dish

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>Dish</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Category.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
        @if (Model.DishIngredients.Count != 0)
        {
            <dt>
                @Html.DisplayNameFor(model => model.DishIngredients)
            </dt>
            <dd>
                @foreach (var dish in Model.DishIngredients)
                {
                    <div>@dish.Ingredient.Name</div>                   
                }
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.DishId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
